<body>
  <!-- Navigation bar -->
  <header>
    <nav>
      <a class="logo" href="/">Portal</a>
      <ul class="nav__links">
        <li><a href="/">home.</a></li>
        <li><a href="/chatrooms">chatrooms.</a></li>
        <li><a href="/contribute">contribute.</a></li>
        <li><a href="/about">about.</a></li>
        <li><a href="/feedback">feedback.</a></li>
      </ul>
    </nav>
    <a href = "/chatrooms"><button>start chatting now!</button></a>
  </header>

  <div class="heading">Chatrooms</div>

  <!--Chatrooms-->

  <div class="card card-position" style="width: 18rem;">
    <img src="https://static.onecms.io/wp-content/uploads/sites/6/2022/07/07/House_Of_The_Dragon_Considine_DArcy_Smith_1.jpg" class="card-img-top" alt="Poster of house of the dragons." style="height:22.5rem;">
    <div class="card-body">
      <h5 class="card-title">House of dragons</h5>
      <p class="card-text">Come, dance with the dragons.</p>
      <button id="enterButton" onclick = "on()">Enter</button>
    </div>
  </div>

  <div class="card card-position" style="width: 18rem;">
    <img src="https://qph.cf2.quoracdn.net/main-qimg-bed421c2b2265271cde990a0ad9b0127-lq" class="card-img-top" alt="Poster of harry potter." style="height:22.5rem;">
    <div class="card-body">
      <h5 class="card-title">Harry Potter</h5>
      <p class="card-text">Alohamora</p>
      <button id="enterButton" onclick = "on()">Enter</button>

    </div>
  </div>

  <div class="card card-position" style="width: 18rem;">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRomv9F-uCF2480TfnY00USwjurvY0WUT-o2w&usqp=CAU" class="card-img-top" alt="Poster of rings of power." style="height:22.5rem;">
    <div class="card-body">
      <h5 class="card-title">Rings of Power</h5>
      <p class="card-text">Behold! The power of my precious!</p>
      <button id="enterButton" onclick = "on()">Enter</button>

    </div>
  </div>

  <!-- Overlay for username input -->

  <div id="overlay">
    <div id="overlay-text">
      <p>Username for this room: </p>
      <input type="text" id="username" placeholder="Enter username"/>
      <a href="/chat-window"><Button id="overlay-enter-button" type="submit">Enter</Button></a>
    </div>
  </div>

  <script>
    on=()=>{
      document.getElementById("overlay").style.display="block";
    }

    off=()=>{
      document.getElementById("overlay").style.display="none";
    }

    const btn = document.getElementById('overlay-enter-button');

    btn.addEventListener('click', function handleClick(event){
      event.preventDefault(); //prevents page reload incase of uses of form
      const username = document.getElementById('username');

      //Do something with the username

      username.value='';
    });
  </script>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
